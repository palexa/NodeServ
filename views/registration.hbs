        @font-face {
            font-family: 'MaterialDesign';
            src: url('../fonts/materialdesignicons-webfont.ttf');
        }

        /*Elements*/
        body{
            display: grid;
            min-height: 100vh;
            margin: 0 0 0 0;
            overflow-y: scroll;
            grid-template-rows: 1fr 8vh;
            font-family: "Segoe UI",Arial,sans-serif;
            font-size: 14px;
            line-height: 20px;
        }
        ul{
            margin: 0 auto;
            text-align: center;
            list-style: none;
            padding: 0;
            display: table;


        }
        li{
            display: inline-block;
            padding: 0 9px 0 9px;

        }
        a{
            color: #aab8c2;
            font-size: 12px;
            font-family: "Segoe UI",Arial,sans-serif;
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
        }
        h1{
            font-size: 27px;
            line-height: 32px;
            margin: 0;
        }
        h2{
            font-size: 18px;
            line-height: 24px;
            margin: 16px auto;
        }
        form{
            display: flex;
        }
        footer{
            line-height: 20px;
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            grid-row: 2;
            background: white;
            padding: 11px 2vw 9px 2vw;
            border-top: 1px solid #e6ecf0;

        }


        /*Classes*/
        .Entrance{
            grid-row: 1;
            background: white;
            align-items: center;
            display: flex;
            flex-direction: column;
            position: relative;
            justify-content: center;
        }

        .Entrance__Login{
            top:20px;
            position: absolute;
        }
        .Entrance__Registration{
            max-width: 350px;
        }

        .Information{
            grid-row: 1;
            grid-column: 1 ;
            background-color: #1da1f2;
            background-image: url("../img/2.jpg");
            background-size: 200vh;
            /*background-position-y: -20vh;*/
            /*background-position-x: 2vw;*/
            display: flex;
            flex-direction: column;
            flex-wrap: nowrap;
            justify-content: center;
            align-content: stretch;
            align-items: center;
        }
        .Information-item{
            display: flex;
            font-family: "Segoe UI",Arial,sans-serif;
            font-size: 18px;
            font-weight: bold;
            line-height: 24px;
            margin: 48px 0;
            margin-left: 16px;
            color: white;
        }
        .Copyright{
            color: #aab8c2;
            font-size: 12px;
            font-family: "Segoe UI",Arial,sans-serif;
        }


        .icon{
            font-family: "MaterialDesign";

        }
        .informationIcon{
            /*vertical-align: baseline;*/
            /*position: relative;*/
            /*display: inline-block;*/
            margin-right: 16px;
            font-size: 35px;
            font-weight: normal;

            /*font-style: normal;*/
            /*text-align: center;*/
        }
        .registrationIcon{
            color: #2ec730;
            font-size: 45px;
            margin-bottom: 8px;
        }
        .peopleIcon::before{
            content: "\f525";
        }
        .searchIcon::before{
            content: "\f4cf";
        }
        .commentIcon::before{
            content: "\f0e3";
        }
        .birdIcon::before{
            content: "\f3da";
        }
        .divIcon{
            margin: 16px auto;
        }

        .button{
            margin-top: 12px;
            height: 100%;
            display: inline-block;
            line-height: 20px;
            padding: 12px;
            font-size: 14px;
            text-align: center;
            outline: none;
            border-radius: 100px;
            align-content: center;
            border: 1px #2aa32c solid;
        }
        .entryButton{
            background: white;
            color: #2aa32c;

        }
        .registrationButton{
            background: #2ec730;
            color: white;
        }
        .button:hover {
            background: rgba(74, 217, 76,0.3);
            cursor: pointer;
            transition: background .5s;
        }
        .button:active {
            text-align: center;
            border: 1px solid #2ec730;
            box-shadow:
                    0 0 0 2px white,
                    0 0 0 4px #2ec730;
            background: #24bd26;
            color: white;
            transition: background .7s;
        }

        .input{
            width: 100%;
            margin-top: 12px;
            line-height: 20px;
            font-size: 14px;
            padding: 12px;
            border: #e6ecf0 1px solid;
            border-radius: 3px;
            background: #f9f8ac;
        }
        .input:focus {
            border-radius: 5px;
            color: #000000;
            outline:none;
            border: 1px solid green;
        }
        .inputDiv{
            width: 100%;
            margin-right: 12px;
        }
        .forgot{
            font-size: 14px;
            /*font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;*/
        }
        .registration{
            width: 350px;
            display: flex;
            flex-direction: column;
        }
        .registrationInput_button{
            padding: 6px 16px;
        }
        .registrationButton:hover{
            background: #2aa32c;
        }


    </style>

</head>
